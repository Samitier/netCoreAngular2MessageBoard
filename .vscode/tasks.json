{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "linux": { "command": "sh", "args": ["-c"] },
    "osx": { "command": "sh", "args": ["-c"] },
    "windows": { "command": "cmd", "args": ["/C"] },
    "tasks": [
        {
            "taskName": "server build",
            "args": ["cd server && dotnet restore && dotnet build"],
            "isBuildCommand": true
        },
        {
            "taskName": "server watch",
            "args": ["cd server && dotnet watch run"],
            "isWatching": true
        },
        {
            "taskName": "server run",
            "args": ["cd server && dotnet run"]
        },
        {
            "taskName": "client build",
            "args": ["cd client && npm install && npm build"],
            "isBuildCommand": true
        },
        {
            "taskName": "client watch",
            "args": ["cd client && webpack --watch"],
            "isWatching": true
        }
    ]
}